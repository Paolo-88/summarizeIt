{
  "manifest_version": 3,
  "name": "Web Page Summarizer",
  "version": "1.0",
  "description": "Summarizes the current web page using OpenAI's GPT-3.5-turbo model.",
  "permissions": [
    "activeTab", 
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}

